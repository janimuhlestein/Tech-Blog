<section>
    <div>
        <ul>
            {{#each posts}}
            <li class = "line-item">
                <h3 class = "post-title">{{title}}</h3>
                <p class = "post-text">{{text}}</p>
                <p class = "post-name">posted by: {{user.username}} on {{created_at}}</p>
                <a class = "comment" href="/post/{{id}}">{{comments.length}} comment(s)</a>
            </li>
            {{/each}}
        </ul>
    </div>
</section>