<article>
    <a href="/dashboard" class = "edit-link"> &larr; Back to dashboard</a>
    <h2 class = "edit-head">Edit Post</h2>
    <form class = "edit-post-form">
        <div>
            <input name = "post-title" id="post-title" type = "text" value = "{{post.title}}"/>
            <input name = "post-text" id="post-text" type = "text" value = "{{post.text}}"/>
        </div>
        <button type = "submit">Save Post</button>
        <button type = "button" class = "delete-post-btn">Delete post</button>
    </form>
    <div>
            <a href="/post/{{post.id}}" class = "edit-post-comment">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</href>
    </div>
    <form class = "add-comment-form">
        <div>
            <textarea name = "comment-body" id = "comment-body"></textarea>
        </div>
        <button type = "submit">add comment</button>
    </form>
</article>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>