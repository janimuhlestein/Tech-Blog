<article class = "post">
    <ul>
<li class = "line-item">
                <h3 class = "post-title">{{post.title}}</h3>
                <p class = "post-text">{{post.text}}</p>
                <p class = "post-name">posted by: {{post.user.username}} on {{post.created_at}}</p>
                <a class = "comment" href="/post/{{id}}">{{post.comments.length}} comment(s)</a>
            </li>
    </ul>
</article>
{{#if loggedIn}}
<form class="add-comment-form" id="add-comment">
  <div>
    <textarea name="comment-body"></textarea>
  </div>
  <div>
    <button type="submit" class = "comment-button">submit</button>
  </div>
</form>
{{/if}}
<div class="show-comments">
  {{#each post.comments}}
  <section class="show-comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>
{{#if loggedIn}}
<script src = "/javascript/comment.js"></script>
{{/if}}